<beans profile="s3" 
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aws-context="http://www.springframework.org/schema/cloud/aws/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.2.xsd
                           http://www.springframework.org/schema/cloud/aws/context
                           http://www.springframework.org/schema/cloud/aws/context/spring-cloud-aws-context-1.0.xsd">

  <context:annotation-config />

  <aws-context:context-credentials>
   <aws-context:simple-credentials access-key="${cloud.aws.credentials.accessKey}" secret-key="${cloud.aws.credentials.secretKey}" />
  </aws-context:context-credentials>

  <aws-context:context-resource-loader/>

  <bean id="rice.kew.attachmentService" class="org.kuali.rice.kew.notes.service.impl.AmazonS3AttachmentServiceImpl">
    <property name="bucketName" value="${rice.kew.attachments.s3.bucketName}"/>
    <property name="folderName" value="${rice.kew.attachments.s3.folderName}"/>
  </bean>

</beans>
